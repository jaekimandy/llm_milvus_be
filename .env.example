# Application
APP_NAME=GaiA-ABiz-Backend
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gaia_abiz
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# JWT Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2
OAUTH2_CLIENT_ID=your-client-id
OAUTH2_CLIENT_SECRET=your-client-secret
OAUTH2_REDIRECT_URI=http://localhost:8000/auth/callback

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-bytes-min
KEY_ROTATION_DAYS=90

# LLM Configuration (Local Only)
LLM_PROVIDER=local
LLM_MODEL_PATH=scripts/models/qwen2.5-gguf/Qwen2.5-7B-Instruct-Q4_K_M.gguf
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_CONTEXT_LENGTH=32768
LLM_N_THREADS=8

# Embeddings Configuration (Local Only)
EMBEDDINGS_PROVIDER=local
EMBEDDINGS_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDINGS_DIMENSION=768

# Milvus Vector Database
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=gaia_embeddings

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# Kubernetes
KUBERNETES_NAMESPACE=gaia-abiz
KUBERNETES_CONFIG_PATH=~/.kube/config
